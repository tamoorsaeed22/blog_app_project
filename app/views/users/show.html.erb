<section>
  <div class="card flex">
    <div class="user-image border">
      <%= image_tag('R.png',  :width => "100px", :heigth=>"100px") %>
    </div>
    <div class="user-data border">
      <h1><%= @user.name %></h1>
      <p class="number-posts">Number of posts: <%= @user.post_counter %></p>
    </div>
  </div>
  <div class="card left">
    <h4>Biography:</h4><br>
    <p><%= @user.bio %></p>
  </div>
</section>
<section>
  <h1 class="users-title">List of recent Posts</h1>
  <ul>
    <% @user.recent_posts.each do |post| %>
      <%= link_to user_posts_path(@user) do %>
        <li class="card left hover">
          <h4><%= post.title%></h4>
          <h4><%= post.text%></h4>
          <div class="right">
            <span>Comments: <%= post.comments_counter %></span>
            <span>Likes: <%= post.likes_counter %> </span>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
  <%= link_to "See all posts", user_posts_path(user_id: @user.id), class: "btn" %>
</section>