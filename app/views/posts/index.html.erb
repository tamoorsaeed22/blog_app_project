<h1>Welcome to posts page</h1>

<section>
  <div class="card flex">
    <div class="user-image border">
      <%= image_tag('R.png',  :width => "100px", :heigth=>"100px") %>
    </div>
    <div class="user-data border">
      <h1><%= @user.name %></h1>
      <p class="number-posts">Number of posts: <%= @user.post_counter %></p>
    </div>
  </div>
</section>
<section>
  <ul>
    <% @posts.each do |post| %>
      <%= link_to user_post_path(user_id: post.author_id, id: post.id) do %>
        <li class="card left hover">
          <div class="card">
            <h2><%= post.title %></h2>
            <p><%= post.text %></p>
            <div class="right">
              <span>Comments: <%= post.comments_counter %></span>
              <span>Likes: <%= post.likes_counter %> </span>
            </div>
          </div>
          <div class="commets-container">
            <h4>Comments:</h4>
            <ul>
              <% post.recent_comments.each do |comment| %>
                <p><%= comment.author.name %>: <%= comment.text %></p>
              <% end %>
            </ul>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</section>